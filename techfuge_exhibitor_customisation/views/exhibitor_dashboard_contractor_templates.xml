<odoo>

    <template id="portal_exhibitor_dashboard_contractor_details" name="Exhibitor Dashboard Contractor Details">
        <t t-call="website.layout">
            <div class='dashboard'>
                <t t-call="techfuge_exhibitor_customisation.portal_exhibitor_dashboard_side_nav_bar"/>
                <div class='dashboard-app'>
                    <header class='dashboard-toolbar'>
                        <a href="#!" class="menu-toggle d-block d-lg-none">
                            <i class="fa fa-bars"></i>
                        </a>
                        <div class="d-flex w-100">
                            <div class="p-2 align-self-center">
                                <img src="/techfuge_exhibitor_customisation/static/src/img/hfs_logo_white.png"
                                     alt="" width="100"/>
                            </div>
                            <div class="p-2 align-self-center w-100">
                                <h4 class="dashboard-toolbar-header">Contractor Details</h4>
                            </div>
                        </div>
                    </header>
                    <div class='dashboard-content pt-3 pt-md-2'>
                        <div class='container'>

                            <div class="row">
                                <div class="col-12 bg-blue rounded p-2">
                                    <h5 class="mb-0">Add Contractor Details</h5>
                                </div>
                            </div>


                            <div class="row mt-4">
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_title" class="font-weight-normal">
                                            Title
                                            <span class="text-danger">*</span>
                                        </label>
                                        <select data-show-content="true" class="form-control" name="exh_title"
                                                required="required">
                                            <option>Select an option</option>
                                            <option>Mr.</option>
                                            <option>Mrs.</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_first_name">
                                            First Name
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="Enter your name"
                                               id="exh_first_name" name="exh_first_name" required="required"/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_last_name">
                                            Last Name
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="Enter your last name"
                                               id="exh_last_name" name="exh_last_name" required="required"/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_designation">
                                            Designation
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="" id="exh_designation"
                                               name="exh_designation" required="required"/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_mobile">Mobile Number
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="Enter your last name"
                                               id="exh_mobile" name="exh_mobile" required="required"/>
                                        <small>Please add country code (ex : +97)</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_email">
                                            Email ID
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="email" class="form-control" placeholder="mail@example.com"
                                               id="exh_email" name="exh_email" required="required"/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="exh_landline">
                                            Landline Number
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="Enter your last name"
                                               id="exh_landline" name="exh_landline" required="required"/>
                                        <small>Please add country code (ex : +97)</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email" class="font-weight-normal">
                                            Company Name
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="ABC Company" id=""/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email">Address Line 1
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="" id=""/>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email">Address Line 2
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="" id=""/>

                                    </div>
                                </div>

                            </div>

                            <div class="row bg-blue rounded p-2 mt-4 ">

                                <div class="col-md-9 align-self-center add-relevant mb-3 mb-md-0 mt-3 mt-md-0">
                                    <h5 class="mb-0">Add Relevant Documents</h5>
                                </div>

                            </div>

                            <div class="row mt-4">
                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email" class="font-weight-normal">
                                            Document type 1
                                            <span class="text-danger">*</span>
                                        </label>
                                        <select data-show-content="true" class="form-control">
                                            <option>Select an option</option>
                                        </select>
                                        <small>
                                            <em>Upload only in PDF</em>
                                        </small>
                                    </div>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email" class="font-weight-normal">
                                            Upload File
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="file" class="form-control" placeholder="" id=""/>
                                    </div>
                                </div>

                                <div class="col-md-4 mb-4">
                                    <div class="form-group">
                                        <label for="email">Notes
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" class="form-control" placeholder="Add your note here..."/>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-0 mt-md-4">

                                <div class="col-12 p-0">
                                    <div class="d-flex flex-sm-row flex-column justify-content-end">
                                        <div class="mr-auto p-0 p-md-2 mb-3">
                                            <button type="button" class="btn btn-orange w-100 btn-orange-padding">
                                                Add Document
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <div class="row mt-5">
                                <div class="col-12 p-0">
                                    <div class="table-responsive rounded">
                                        <table class="table table-bordered text-center">
                                            <tr class="bg-blue-light">
                                                <th>Document type</th>
                                                <th>Document name</th>
                                                <th>Notes</th>
                                                <th/>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <p/>
                                                </td>

                                                <td>
                                                    <p/>
                                                </td>

                                                <td>
                                                    <p/>
                                                </td>

                                                <td>
                                                    <!--                                                    <button type="button" class="btn btn-red-light w-100">-->
                                                    <!--                                                        <i class="fa fa-trash-o"></i>-->
                                                    <!--                                                        Delete document-->
                                                    <!--                                                    </button>-->
                                                </td>
                                            </tr>


                                        </table>
                                    </div>
                                </div>
                            </div>

                            <hr class="mt-3 mb-3"/>

                            <div class="row mt-0 mt-md-4">

                                <div class="col-12 p-0">
                                    <div class="d-flex flex-sm-row flex-column justify-content-end">
                                        <div class="mr-auto p-0 p-md-2 mb-3">
                                            <button type="button" class="btn btn-orange w-100 btn-orange-padding">Book
                                                Contractor
                                            </button>
                                        </div>

                                        <div class="p-0 p-md-2 mb-3">
                                            <button type="button" class="btn btn-red-light w-100">Clear all</button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
