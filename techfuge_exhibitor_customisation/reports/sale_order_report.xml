<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_saleorder_document_inherit_exhibitor" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.internal_layout">
                <div class="oe_structure"/>
                <strong>
                    <div class="text-center" style="font-size: 18px;">
                        <span t-if="env.context.get('proforma', False) or is_pro_forma">
                            <b>PROFORMA INVOICE</b>
                        </span>
                        <span t-elif="doc.state in ['draft','sent']">QUOTATION</span>
                        <span t-else="">ORDER</span>
                    </div>
                </strong>

                <div class="page exhibitor_report_page">
                    <table style="width: 100%; border: 1px solid #ffffff;">
                        <tbody>
                            <tr>
                                <td rowspan="3" class="exhibitor_report_company_logo">
                                    <img t-att-src="image_data_uri(doc.company_id.logo)"
                                         style="width: 80px; height: 40px;"/>
                                </td>
                                <td rowspan="3" class="exhibitor_report_company_info">
                                    <b>
                                        <t t-esc="doc.company_id.name.upper()"/>
                                    </b>
                                    <br/>
                                    <t t-esc="doc.company_id.street"/>
                                    <br/>
                                    <t t-esc="doc.company_id.street2"/>
                                    <br/>
                                    Emirate :
                                    <t t-esc="doc.company_id.city"/>
                                    <br/>
                                    TRN:
                                    <t t-esc="doc.company_id.trn_no"/>
                                    <br/>
                                    E-Mail:
                                    <t t-esc="doc.company_id.email"/>
                                </td>
                                <td style="width: 25%; border-left: 1px solid #848484; border-right: 1px solid #848484; font-size: 12px; padding-left: 3px; height: 35px;">
                                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                        Proforma Invoice No.
                                    </t>
                                    <t t-elif="doc.state in ['draft','sent']">
                                        Quotation No.
                                    </t>
                                    <t t-else="">
                                        Order No.
                                    </t>
                                    <br/>
                                    <b>
                                        <span t-esc="doc.name"/>
                                    </b>
                                </td>
                                <td style="width: 25%; font-size: 12px; padding-left: 3px;">
                                    Dated
                                    <br/>
                                    <b>
                                        <t t-if="doc.date_order">
                                            <span t-esc="doc.date_order.strftime('%d-%B-%Y')"/>
                                        </t>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 25%; border-left: 1px solid #848484; border-top: 1px solid #848484; font-size: 12px; padding-left: 3px; height: 35px;">
                                    Delivery Note
                                    <br/>
                                    <b>
                                        <span t-esc="doc.delivery_note"/>
                                    </b>
                                </td>
                                <td style="width: 25%; border-left: 1px solid #848484; border-top: 1px solid #848484; font-size: 12px; padding-left: 3px; height: 35px;">
                                    Mode/Terms of Payment
                                    <br/>
                                    <b>
                                        <span t-esc="doc.payment_term_id.name"/>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 25%; border-left: 1px solid #848484; border-top: 1px solid #848484; font-size: 12px; vertical-align: top; padding-left: 3px; height: 35px;">
                                    Supplier's Ref.
                                    <br/>
                                    <b>
                                        <span t-esc="doc.client_order_ref"/>
                                    </b>
                                </td>
                                <td style="width: 25%; border-left: 1px solid #848484; border-top: 1px solid #848484; font-size: 12px; vertical-align: top; padding-left: 3px; height: 35px;">
                                    Other Reference(s)
                                    <br/>
                                    <b>
                                        <span t-esc="doc.other_reference"/>
                                    </b>
